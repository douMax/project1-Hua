<div class="ui center aligned text container">
  <h2>Gallery</h2>
</div>

<ul style="list-style: none;">
  <% @posts.each do |p| %>
    <div class="ui container">
      <li>

          <div class="ui card centered">
            <div class="ui medium rounded image">
              <%= link_to cl_image_tag(p.image, :width=>400, :height=>300, :crop=>"scale", :secure=>true), post_path( p )%>
            </div>

            <div class="content">
              <h3>Created by <%= p.user.name %></h3>
            </div>
          </div>
          <div class="container"></div>

      </li>
    </div>
  <% end %>
</ul>
