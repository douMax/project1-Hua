<h2>Gallery</h2>

<ul>
  <% @posts.each do |p| %>
  <div class="ui three stackable cards">
    <li>
      <div class="ui card">
        <div class="image">
          <%= link_to cl_image_tag(p.image, :width=>400, :height=>300, :crop=>"scale", :secure=>true), post_path( p )%>
        </div>
        <div class="content">
          <p>Created by <%= p.user %></p>
        </div>
      </div>
    </li>
  </div>
  <% end %>
</ul>
