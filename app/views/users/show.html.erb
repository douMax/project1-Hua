

<div class="ui grid container raised segment">
  <div class="one column"></div>
  <div class="five wide column">
    <div class="ui small image circular">
      <%= link_to cl_image_tag(@user.image, :width=>300, :height=>300, :crop=>"scale", :secure=>true)%>
    </div>
  </div>
  <div class="ten wide column">
    <div class="ui header">
      <h1>Name: <%= @user.name %> </h1>
      <h3>Email: <%= @user.email %> </h3>
    </div>
    <% if @current_user == @user %>
    <%= link_to 'Edit Profile', edit_user_path(@user), class: 'ui button' %>
    <%= link_to 'Start Drawing', new_post_path, class: 'ui button' %>
    <% end %>
  </div>
</div>

<div class="ui relaxed stackable grid container">
  <div class="doubling four column row">
    <% @user.posts.each do |p| %>
      <div class="column">
        <div class="ui centered card">

          <div class="ui image">
            <%= link_to cl_image_tag(p.image, :width=>400, :height=>300, :crop=>"scale", :secure=>true), post_path( p )%>
          </div>

          <div class="content">
            <h3>Created by <%= p.user.name %></h3>
          </div>

        </div>

        <div class="ui container"></div>

      </div>
    <% end %>
  </div>
</div>
